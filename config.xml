<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>List Of Movies</name>
    <description>
        An application to test Apache Cordova with the API Rotten Tomatoes.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Nicolas Heldmaier and AnaÃ«lle Hamon
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="www/img/icon.png"/>
        <splash src="www/img/splashscreen.png"/>
      <preference name="SplashScreenDelay" value="750" /> <!-- defaults to "3000" -->
        <preference name="SplashScreenBackgroundColor" value="black" /> <!-- defaults to "#464646" -->

        <preference name="SplashScreenWidth" value="40" /> <!-- defaults to "170" -->
        <preference name="SplashScreenHeight" value="40" /> <!-- defaults to "200" -->
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="browser">
        <icon src="www/img/icon.png"/>
        <preference name="SplashScreen" value="img/splashscreen.gif" /> <!-- defaults to "img/logo.png" -->
        <preference name="SplashScreenDelay" value="3500" /> <!-- defaults to "3000" -->
        <preference name="SplashScreenBackgroundColor" value="black" /> <!-- defaults to "#464646" -->
        <preference name="SplashScreenWidth" value="600" /> <!-- defaults to "170" -->
        <preference name="SplashScreenHeight" value="300" /> <!-- defaults to "200" -->
    </platform>
</widget>
